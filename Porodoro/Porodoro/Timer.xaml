      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Porodoro"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Timer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="264*"/>
            <RowDefinition Height="155*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="doTimer" Width="300" Height="150" TextAlignment="Center" FontSize="70" FontFamily="Segoe UI Light" Grid.Column="1" Margin="86,134,246,135" Grid.RowSpan="2"></TextBlock>
        <Button Click="doPause" Content="Pause" Grid.Column="1" Margin="291,0,184,104" Grid.Row="1"/>
